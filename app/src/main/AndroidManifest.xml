<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.edu.cenidet.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" /-->
    <!--
    uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" /
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mx.edu.cenidet.app.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mx.edu.cenidet.app.activities.HomeActivity" />
        <activity
            android:name="mx.edu.cenidet.app.activities.SplashActivity"
            android:theme="@style/SplashScreen" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <service android:name="mx.edu.cenidet.app.services.DeviceService" />

        <activity android:name="mx.edu.cenidet.app.activities.MapDetailActivity" />

        <service android:name="mx.edu.cenidet.app.services.DrivingFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="mx.edu.cenidet.app.services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="mx.edu.cenidet.app.activities.AlertMapDetailActivity" />
        <activity android:name="mx.edu.cenidet.app.activities.AlertHistoryActivity" />
        <activity android:name="mx.edu.cenidet.app.activities.SendManualAlertsActivity" />
        <activity android:name="mx.edu.cenidet.app.activities.CreateAccountActivity" />
        <activity android:name="mx.edu.cenidet.app.activities.MyProfileActivity"></activity>
    </application>

</manifest>