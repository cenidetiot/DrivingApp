<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.edu.cenidet.app.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenViewDetailCampus"
                android:layout_width="wrap_content"
                android:layout_height="184dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/tvDetailCampus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textSize="@dimen/subheading"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/tvRoadSegment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/subheading"
                android:textStyle="bold"
                android:text="" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/speedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:src="@drawable/ic_speed"
                app:backgroundTint="@color/colorPrimary"
                app:borderWidth="5dp"
                app:fabSize="mini" />

            <!--ImageView
                android:id="@+id/contactPhoto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/-->
        </LinearLayout>
    </ScrollView>
    <!--include android:id="@+id/btnFloating" layout="@layout/floating_button"/-->
